# File name: KvMien.kv
#:kivy 1.7.0

<ToolButton@Button>:
    size_hint: None,None
    size: 80,80

<ToolImage@Image>:
    size_hint: None,None
    size: 64,64
    center_x: self.parent.center_x
    center_y: self.parent.center_y

<KvDlg>:
    size_hint: (0.6, 0.6)
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: _filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(_filechooser.path, _filechooser.selection)

<KvMien>:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        GridLayout:
            id: _toolbox
            size_hint: None,None
            width: 50
            cols: 1
            padding: 2
            ToolButton:
                on_press: root.PiStart(*args)
                ToolImage:
                    source: 'icon/Play.ico'
            ToolButton:
                on_press: root.PiPause(*args)
                ToolImage:
                    source: 'icon/Pause.ico'
            ToolButton:
                on_press: app.stop()
                ToolImage:
                    source: 'icon/Stop.ico'
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        GridLayout:
            rows: 2
            cols: 2
            size_hint: None,None
            width: root.width - _toolbox.width
            height: root.height
            KvCam:
                id: _camera
                resolution: (640,480)
                play: True
                on_press: root.KvMienLoop(*args)
            KvCard:
                id: _card
                source: "card/card_0.png"
                on_press: self.path()
                on_release: self.card()
            KvPreview:
                id: _preview
            KvChip:
                id: _chip
